{
  "name": "scaffolding",
  "version": "0.0.1",
  "description": "This is a product created by Afonso Araújo Neto to manage books",
  "private": "true",
  "scripts": {
    "delete:node_modules": "find . -name \"node_modules\" -exec rm -rf '{}' +",
    "preinstall": "yarn delete:node_modules",
    "bookmanager:server": "yarn workspace @Scaffolding/bookmanager start",
    "bookmanager:build": "yarn workspace @Scaffolding/bookmanager build",
    "server:clear:authors": "yarn workspace @Scaffolding/bookmanager clear:authors",
    "server:clear:books": "yarn workspace @Scaffolding/bookmanager clear:books",
    "server:clear:categories": "yarn workspace @Scaffolding/bookmanager clear:categories",
    "server:clear:editions": "yarn workspace @Scaffolding/bookmanager clear:editions",
    "server:clear:all": "yarn workspace @Scaffolding/bookmanager clear:all",
    "stronghold:server": "yarn bookmanager:build && yarn workspace @Scaffolding/stronghold start",
    "stronghold:build": "yarn bookmanager:build && yarn workspace @Scaffolding/stronghold build",
    "personssector:server": "yarn workspace @Scaffolding/personssector start",
    "personssector:build": "yarn workspace @Scaffolding/personssector build",
    "build:all": "yarn personssector:build && yarn stronghold:build && yarn bookmanager:build",
    "jest": "jest --no-cache --detectOpenHandles",
    "prepare": "husky install"
  },
  "author": "Afonso Araújo Neto",
  "license": "MIT",
  "workspaces": {
    "packages": [
      "projects/*"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.5",
    "@babel/node": "^7.10.5",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/dotenv-safe": "^8.1.0",
    "@types/graphql-relay": "^0.6.0",
    "@types/jest": "^26.0.7",
    "@types/kcors": "^2.2.3",
    "@types/koa": "^2.11.3",
    "@types/koa-graphql": "^0.8.4",
    "@types/koa-logger": "^3.1.1",
    "@types/koa-router": "^7.4.1",
    "@types/mongoose": "^5.7.32",
    "@types/node": "^14.0.24",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "babel-jest": "^26.1.0",
    "eslint": "^7.32.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "husky": "^7.0.0",
    "jest": "^26.1.0",
    "jest-junit": "^11.0.1",
    "lint-staged": "^11.1.2",
    "mongodb-memory-server": "^6.6.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "supertest": "^4.0.2",
    "typescript": "^3.9.7"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.spec.{js,ts}": "eslint --fix",
    "*.{js,ts,css,md}": "prettier --write",
    "*.sol": "solhint"
  }
}
